<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FirstProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FirstProject.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FirstProject</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="https://www.duolingo.com/" target="_blank">AboutUs</a>
                        </li>
                       

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Index">AuthLogin</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Signup">SignUp</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container">
        <main role="main" class="pb-0">
            @RenderBody()
        </main>
    </div>
    <footer style="margin:0px 70px 20px 70px;" >
        <div style="background-color:black; color:white; width:100%; height:70%;  ">
            <table style="width:100%; height:70%; margin:10px 10px 10px 30px;">
                <thead>
                    <tr>
                        <th>University</th>
                        <th>Branches</th>
                        <th>Useful Links</th>
                        <th>Contacts</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td rowspan="4">Massachusetts Institute of Technology (MIT)</td>
                        <td>Computer Science</td>
                        <td><a href="https://www.mit.edu" style="color:white">Official Website</a></td>
                        <td>Cambridge, Massachusetts, (US)</td>
                    </tr>
                    <tr>
                        <td>Mechanical Engineering</td>
                        <td><a href="#" style="color:white">Admissions</a></td>
                        <td>infocenter@mit.edu</td>
                    </tr>
                    <tr>
                        <td>Civil Engineering</td>
                        <td><a href="#" style="color:white">Library</a></td>
                        <td>+1-617-253-1000</td>
                    </tr>
                    <tr>
                        <td>Information Technology</td>
                        <td><a href="#" style="color:white">Events & News</a></td>
                        <td>+91-123-456-7891</td>
                    </tr>
                </tbody>
            </table>
            <hr />
            <div style="background-color: darkgray;">
                <nav class="navbar">
                    <div class="container-fluid d-flex justify-content-between align-items-center">
                        <p class="mb-0">© 2025 CopyWrite: <a class="navbar-brand text-dark" href="#">University</a></p>
                        <div class="d-flex gap-3">
                            <a href="#"><img src="~/Image/facebook.png" alt="Facebook" style="width:25px" /></a>
                            <a href="#"><img src="~/Image/insta.png" alt="Instagram" style="width:25px" /></a>
                            <a href="#"><img src="~/Image/google.png" alt="Google" style="width:25px" /></a>
                            <a href="#"><img src="~/Image/linkedin.png" alt="LinkedIn" style="width:25px" /></a>
                            <a href="#"><img src="~/Image/twiter.png" alt="Twitter" style="width:25px" /></a>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
