<body style="  background: linear-gradient(135deg, #72B6E3, #373737);">
    <div class="d-flex justify-content-center align-items-center vh-100">


        <div class="card" style="width: 30rem;">
            <div class="card-body">
                <form id="form">
                    <h2>Registration</h2>
                    <table class="w-100 mb-2">
                        <thead>
                        <th>Full Name</th>
                        <th class="In2 d-flex">Username</th>
                        </thead>
                        <tbody>
                        <td><input type="text" id="fullname" name="name" value="" placeholder="Enter your name" size="23px" /></td>
                        <td><input type="text" id="username" name="name" value="" placeholder="Enter your username" size="23px" class="In2" /></td>
                        </tbody>
                    </table>
                    <table class="w-100 mb-2">
                        <thead>
                        <th>Email</th>
                        <th class="In2">Phone</th>
                        </thead>
                        <tbody>
                        <td><input type="email" id="email" name="name" value="" placeholder="Enter your Email" size="23px" /></td>
                        <td><input type="tel" id="phone" name="name" value="" placeholder="Enter your Phone Number" class="In2" max="10" style="width: 210px;" /></td>
                        </tbody>
                    </table>
                    <table class="w-100 mb-2">
                        <thead>
                        <th>Password</th>
                        <th class="In2">Confirm Password</th>
                        </thead>
                        <tbody>
                        <td><input type="text" id="password" name="name" value="" placeholder="Enter your Password" size="23px" /></td>
                        <td><input type="text" id="confirm_password " name="name" value="" placeholder="Confirm your Password" size="23px" class="In2" /></td>
                        </tbody>
                    </table>
                    <table class="w-100 mb-2">
                        <div>
                        <thead><div><b>Gender</b> </div></thead>
                        <tbody>
                        <td>
                            <input type="radio" id="male" name="gender" value="male">
                            <label for="male">Male</label>
                        </td>
                        <td>
                            <input type="radio" id="female" name="gender" value="male" class="In3">
                            <label for="male">Female</label>
                        </td>
                        <td>
                            <input type="radio" id="pns" name="gender" value="male" class="In3">
                            <label for="male">Prefer not to say</label>
                        </td>

                        </tbody>
                    </table>
                    <div class="d-flex justify-content-center mt-3">
                        <button style="width:400px;  background: linear-gradient(to right, #72B6E3, #373737);">Registor</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>

                $(function(){
        $("#form").on("submit", function(){
           var Auth ={
               Full_Name:$("#fullname").val(),
               Username:$("#username").val(),
               Email:$("#email").val(),
               Phone:$("#phone").val(),
               Password:$("#password").val(),
               Confirm_Password:$("#confirm_password").val(),
               Gender:$("input[name='gender']:Checked").val()
           }
           $.AJAX({

           })
        })
        });
    </script>

</body>
</html>
